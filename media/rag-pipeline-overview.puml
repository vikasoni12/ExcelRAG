@startuml
skinparam shadowing false
skinparam roundcorner 10
skinparam defaultFontName Segoe UI
skinparam defaultFontSize 14

rectangle "Excel Workbook" as Excel {
  [Sources]\n[Chunks]\n[Metadata]\n[QA]
}

rectangle "Excel-DNA Add-in" as AddIn {
  [UDFs]\n[Trigger]\n[Cache]
}

rectangle "Managed .NET Layer" as DotNet {
  [Ingest]\n[Normalize]\n[Chunk]\n[Metadata]\n[Validate]
}

rectangle "Export" as Export {
  [JSONL]\n[Manifest]\n[Provenance]
}

cloud "Vector Store" as Vector

Excel -right-> AddIn : RAG.* UDFs
AddIn -right-> DotNet
DotNet -right-> Export
Export -right-> Vector

@enduml
